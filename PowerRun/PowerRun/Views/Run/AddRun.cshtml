@using PowerRun.Models
@model Run
@{
    <form asp-controller="Run" asp-action="AddRun" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" role="form">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Time" class="col-md-2 control-label"></label>
            <div class="col-md-4">
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Distance" class="col-md-2 control-label"></label>
            <div class="col-md-4">
                <input asp-for="Distance" class="form-control" />
                <span asp-validation-for="Distance" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Pace" class="col-md-2 control-label"></label>
            <div class="col-md-4">
                <input asp-for="Pace" class="form-control" />
                <span asp-validation-for="Pace" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" />
            </div>
        </div>
    </form>
}
